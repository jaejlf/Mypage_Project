<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello !</title>
</head>

<body>
    <%- include('nav.html')%>
        <div class="row justify-content-center mt-5">
            <div class="col-lg-8 col-xl-7">
                <h3 class="page-section-heading text-center text-uppercase text-secondary mt-5"><strong>자기소개 리스트</strong>
                </h3>
                <br>
                <div class="row justify-content-center">
                  <!--리스트-->
                  <ul class="list-group">
                      <% for (var i = 0; i < posts.length; i++){ %>
                          <li class="list-group-item">
                              <h4>이름 : <%= posts[i].name %></h4>
                              <p>이메일 : <%= posts[i].email %></p>
                              <p>자기소개 : <%= posts[i].description %></p>
                              <button class="delete" data-id="<%= posts[i].name %>">삭제</button>
                          </li>
                          <br>
                      <% } %>
                    </ul>

                    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

                    <script>
                        $('.delete').click(function (e) {
                            var clicked = $(this); //현재 클릭된 것
                            $.ajax({
                                method: 'DELETE',
                                url: '/delete',
                                data: {name: e.target.dataset.id}
                            }).done(function (result) {
                                console.log('성공');
                                clicked.parent('li').fadeOut();
                            }).fail(function () {
                                console.log('실패');
                            })
                        })
                    </script>

                </div>
            </div>
        </div>
</body>

</html>